#!/bin/bash

# Kontrolli, kas on antud 천ige arv parameetreid
if [ $# -ne 1 ]; then
    echo "Kasutusjuhend: $0 failinimi"
    exit 1
fi

# M채채ra failinimi muutujasse
failinimi="$1"

# Kontrolli, kas fail eksisteerib
if [ ! -f "$failinimi" ]; then
    echo "Faili $failinimi ei leitud."
    exit 1
fi

# Loe iga rida failist ja k채ivita lisa_kasutaja skript
while IFS= read -r kasutajanimi || [ -n "$kasutajanimi" ]; do
    echo "Lisan kasutaja: $kasutajanimi"
    ./lisa_kasutaja "$kasutajanimi"
    echo "-------------------------"
done < "$failinimi"

